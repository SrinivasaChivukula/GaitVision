<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/card_background"
    android:padding="16dp"
    android:layout_marginBottom="12dp">

    <!-- Header Row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="12dp">

        <!-- Date -->
        <TextView
            android:id="@+id/tvDate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Dec 2, 2025 • 2:30 PM"
            android:textColor="#888888"
            android:textSize="12sp" />

        <!-- Score Badge -->
        <LinearLayout
            android:id="@+id/scoreContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/score_badge_background"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tvScore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="85"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="/100"
                android:textColor="#AAAAAA"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

    <!-- Metrics Row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="12dp">

        <!-- Left Knee -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="L Knee"
                android:textColor="#666666"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/tvLeftKnee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="82°"
                android:textColor="#4FC3F7"
                android:textSize="14sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Right Knee -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="R Knee"
                android:textColor="#666666"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/tvRightKnee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="84°"
                android:textColor="#4FC3F7"
                android:textSize="14sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Left Hip -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="L Hip"
                android:textColor="#666666"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/tvLeftHip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="165°"
                android:textColor="#FF9800"
                android:textSize="14sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Right Hip -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="R Hip"
                android:textColor="#666666"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/tvRightHip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="168°"
                android:textColor="#FF9800"
                android:textSize="14sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Torso -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Torso"
                android:textColor="#666666"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/tvTorso"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3°"
                android:textColor="#4CAF50"
                android:textSize="14sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <!-- Action Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnViewVideo"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="Video"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            android:backgroundTint="#00000000"
            style="@style/Widget.Material3.Button.OutlinedButton"
            app:strokeColor="#4FC3F7"
            app:strokeWidth="1dp"
            app:cornerRadius="8dp"
            android:layout_marginEnd="8dp"
            app:icon="@drawable/baseline_videocam_24"
            app:iconTint="#FFFFFF"
            app:iconPadding="6dp"
            app:iconGravity="start" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnViewCharts"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="Charts"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            android:backgroundTint="#00000000"
            style="@style/Widget.Material3.Button.OutlinedButton"
            app:strokeColor="#4FC3F7"
            app:strokeWidth="1dp"
            app:cornerRadius="8dp"
            android:layout_marginStart="8dp"
            app:icon="@drawable/ic_bar_chart_24"
            app:iconTint="#FFFFFF"
            app:iconPadding="6dp"
            app:iconGravity="start" />
    </LinearLayout>

</LinearLayout>

