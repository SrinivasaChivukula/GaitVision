<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="?attr/selectableItemBackground"
    android:padding="12dp"
    android:gravity="center_vertical">

    <!-- Patient ID -->
    <TextView
        android:id="@+id/tvPatientId"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="P001"
        android:textColor="#4FC3F7"
        android:textSize="14sp"
        android:textStyle="bold" />

    <!-- Patient Name -->
    <TextView
        android:id="@+id/tvPatientFirstName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="John"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        android:ellipsize="end"
        android:maxLines="1" />

    <TextView
        android:id="@+id/tvPatientLastName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Doe"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        android:ellipsize="end"
        android:maxLines="1" />

    <TextView
        android:id="@+id/tvPatientGender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Male"
        android:textColor="#888888"
        android:textSize="11sp"
        android:visibility="gone" />

    <!-- Age -->
    <TextView
        android:id="@+id/tvPatientAge"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="45"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        android:gravity="center" />

    <!-- Video Count -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center">

        <TextView
            android:id="@+id/tvVideoCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3"
            android:textColor="#4CAF50"
            android:textSize="14sp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@android:drawable/ic_menu_camera"
            android:layout_marginStart="4dp" />
    </LinearLayout>

    <!-- Arrow indicator -->
    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@android:drawable/ic_media_play"
        android:rotation="0"
        android:alpha="0.5"
        android:contentDescription="View details" />

</LinearLayout>

